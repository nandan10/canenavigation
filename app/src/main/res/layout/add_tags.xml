<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:textAlignment="textStart"
    >
    <TextView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_back_arrow"
        android:contentDescription="go back"
        android:onClick="goBackPressed"
        android:textColor="#000000" />
    <!--android:paddingBottom="5sp"-->
    <!--android:paddingTop="5sp"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:contentDescription="TAGS"
            android:text="TAGS"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold" />

        <CheckBox
        android:text="Traffic Signal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18dp"
        android:buttonTint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:background="#000000"
        android:layout_weight="0.2"
        android:id="@+id/checkBox" />

    <CheckBox
        android:text="Footpath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18dp"
        android:buttonTint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:background="#000000"
        android:layout_weight="0.2"
        android:id="@+id/checkBox2" />

    <CheckBox
        android:text="Street Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18dp"
        android:buttonTint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:background="#000000"
        android:layout_weight="0.2"
        android:id="@+id/checkBox3" />

    <CheckBox
        android:text="Tactile Paving"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18dp"
        android:buttonTint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:background="#000000"
        android:layout_weight="0.2"
        android:id="@+id/checkBox4"
        android:checked="false" />
        <androidx.cardview.widget.CardView
            android:id="@+id/cd70"
            android:layout_width="match_parent"
            android:layout_height="119dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:onClick="sendMessage"
            android:padding="@dimen/cardview_default_elevation"
            app:cardBackgroundColor="#30302e"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"

            >
    <Button
        android:text="Done"
        android:contentDescription="Save tags "
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#30302e"
        android:onClick="sendMessage"
        android:id="@+id/button2" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>