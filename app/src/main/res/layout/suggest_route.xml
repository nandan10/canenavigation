<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:textAlignment="textStart"
    >
    <TextView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_back_arrow"
        android:contentDescription="go back"
        android:onClick="goBackPressed"
        android:textColor="#000000" />
    <!--android:paddingBottom="5sp"-->
    <!--android:paddingTop="5sp"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/myoutput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:contentDescription="Suggest Route"
            android:text="SUGGEST ROUTE"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold" />
        <androidx.cardview.widget.CardView
            android:id="@+id/cd95"
            android:layout_width="match_parent"
            android:layout_height="119dp"
            android:layout_margin="10dp"
            android:padding="@dimen/cardview_default_elevation"
            app:cardBackgroundColor="#30302e"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            android:clickable="true"
            android:onClick="onSaveSuggest">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <Button

        android:layout_width="match_parent"
        android:hint="Route"
        android:contentDescription="Route "
        android:id="@+id/button_suggest"
        android:onClick="onSaveSuggest"
        android:layout_height="match_parent"
        android:backgroundTint="#30302e"
        android:textColor="#FFFFFF"
        android:textSize="18dp" />
            </RelativeLayout>
            <TextView
                android:id="@+id/tv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:contentDescription="Save Route"
                android:text="SAVE ROUTE"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="@color/white"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cd96"
            android:layout_width="match_parent"
            android:layout_height="119dp"
            android:layout_margin="10dp"
            android:padding="@dimen/cardview_default_elevation"
            app:cardBackgroundColor="#30302e"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            android:clickable="true"
            android:onClick="onEditSuggest">
    <Button
        android:backgroundTint="#30302e"

        android:layout_width="match_parent"
        android:text="EDIT NAME"
        android:contentDescription="Edit route name "
        android:id="@+id/button_editSuggest"
        android:onClick="onEditSuggest"
        android:layout_height="match_parent"
        android:textColor="#FFFFFF"
        android:textSize="18dp" />
    </androidx.cardview.widget.CardView>


</LinearLayout>
</LinearLayout>