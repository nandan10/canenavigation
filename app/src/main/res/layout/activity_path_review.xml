<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:textAlignment="textStart"
    >
    <TextView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_back_arrow"
        android:contentDescription="go back"
        android:onClick="goBackPressed"
        android:textColor="#00000000" />
    <!--android:paddingBottom="5sp"-->
    <!--android:paddingTop="5sp"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:contentDescription="ROUTE PREVIEW"
            android:text="ROUTE PREVIEW"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cd50"
            android:layout_width="match_parent"
            android:layout_height="119dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:onClick="repeat"
            android:padding="@dimen/cardview_default_elevation"
            app:cardBackgroundColor="#30302e"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="Repeat instruction  "
                    android:onClick="repeat"
                    android:text="REPEAT"
                    android:id="@+id/button13"
                    android:layout_marginLeft="60dp"
                    android:backgroundTint="#30302e"
                    android:textAlignment="center"
                    android:textColor="@color/white"

                    android:textSize="18dp" />

            </RelativeLayout>

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="fitStart"


                android:src="@drawable/repeat" />



        </androidx.cardview.widget.CardView>



    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cd51"
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:onClick="previous"
            android:padding="@dimen/cardview_default_elevation"
            app:cardBackgroundColor="#30302e"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button17"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#30302e"
                    android:contentDescription="Previous instruction "
                    android:onClick="previous"
                    android:text="PREVIOUS"
                    android:textAlignment="textEnd"
                    android:textColor="@color/white"

                    android:textSize="16sp" />

            </RelativeLayout>

            <ImageView

                android:layout_width="50dp"
                android:layout_height="120dp"
                android:scaleType="fitStart"


                android:src="@drawable/previous" />



        </androidx.cardview.widget.CardView>




        <androidx.cardview.widget.CardView
            android:id="@+id/cd52"
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:onClick="next"
            android:padding="@dimen/cardview_default_elevation"
            app:cardBackgroundColor="#30302e"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button18"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#30302e"
                    android:contentDescription="Next instruction "
                    android:onClick="next"
                    android:text="NEXT"
                    android:textAlignment="center"
                    android:textColor="@color/white"

                    android:textSize="16sp" />

            </RelativeLayout>

            <ImageView

                android:layout_width="50dp"
                android:layout_height="120dp"
                android:scaleType="fitStart"
android:layout_marginStart="118dp"

                android:src="@drawable/next" />



        </androidx.cardview.widget.CardView>


    </TableRow>

        <androidx.cardview.widget.CardView
            android:id="@+id/cd53"
            android:layout_width="match_parent"
            android:layout_height="119dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:onClick="tags"
            android:padding="@dimen/cardview_default_elevation"
            app:cardBackgroundColor="#30302e"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/button20"

                    android:contentDescription="Get road attributes "

                    android:layout_marginLeft="60dp"
                    android:backgroundTint="#30302e"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:onClick="tags"
                    android:text="TAGS"
                    android:textSize="18dp" />

            </RelativeLayout>

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="fitStart"


                android:src="@drawable/tags" />



        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cd55"
            android:layout_width="match_parent"
            android:layout_height="119dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:onClick="steps"
            android:padding="@dimen/cardview_default_elevation"
            app:cardBackgroundColor="#30302e"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/steps"
                    android:contentDescription="Steps "
                    android:onClick="steps"
                    android:text="STEPS"
                    android:layout_marginLeft="60dp"
                    android:backgroundTint="#30302e"
                    android:textAlignment="center"
                    android:textColor="@color/white"

                    android:textSize="18dp" />

            </RelativeLayout>

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="fitStart"
                android:src="@drawable/exit" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cd56"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clickable="true"
            android:onClick="onStopButton"
            android:padding="@dimen/cardview_default_elevation"
            app:cardBackgroundColor="#30302e"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">
        <ListView
            android:text="Steps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Steps" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cd54"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:onClick="onStopButton"
            android:padding="@dimen/cardview_default_elevation"
            app:cardBackgroundColor="#30302e"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/button19"
                    android:contentDescription="Exit "
                    android:onClick="onStopButton"
                    android:text="EXIT"
                    android:layout_marginLeft="60dp"
                    android:backgroundTint="#30302e"
                    android:textAlignment="center"
                    android:textColor="@color/white"

                    android:textSize="18dp" />

            </RelativeLayout>

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:scaleType="fitStart"
                android:src="@drawable/exit" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>