<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:textAlignment="textStart"
    >
    <TextView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_back_arrow"
        android:contentDescription="go back"
        android:onClick="goBackPressed"
        android:textColor="#00000000" />
    <!--android:paddingBottom="5sp"-->
    <!--android:paddingTop="5sp"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:contentDescription="SEARCH NEARBY"
            android:text="SEARCH NEARBY "
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:padding="10dp"

            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            android:layout_gravity="center"
            >

            <EditText
                android:id="@+id/editTextphrase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="10dp"
                android:hint="Search"
                android:textSize="18dp"
                android:inputType="textPersonName"

                />
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="SEARCH NEARBY"
                android:text="like college,school,bicycle_parking,hospital,pharmacy,theatre,taxi,fuel,restaurant"
                android:textAlignment="center"
                android:textSize="14dp"
                />
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:padding="10dp"
            app:cardBackgroundColor="#EBE2E2"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            android:layout_gravity="center"
            >

    <Button
        android:id="@+id/buttonsip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="Speech Input "
        android:onClick="on_sip"
        android:text="SPEECH INPUT"
        android:textColor="#000000"
        android:textSize="18dp" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:padding="10dp"
            app:cardBackgroundColor="#EBE2E2"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            android:layout_gravity="center"
            >
    <Button
        android:id="@+id/buttondp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="Done "
        android:onClick="on_donep"
        android:text="DONE"
        android:textColor="#000000"
        android:textSize="18dp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>