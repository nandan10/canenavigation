<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:textAlignment="textStart">
    <!--android:paddingBottom="5sp"-->
    <!--android:paddingTop="5sp"-->
    <TextView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_back_arrow"
        android:contentDescription="go back"
        android:onClick="goBackPressed"
        android:textColor="#000000" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:contentDescription="Nearby"
        android:text="NEARBY"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cd40"
            android:layout_width="match_parent"
            android:layout_height="119dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:onClick="on_satm"
            android:padding="@dimen/cardview_default_elevation"
            app:cardBackgroundColor="#30302e"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ATM"
                    android:contentDescription="Search A T M "
                    android:id="@+id/button_satm"
                    android:onClick="on_satm"
                    android:layout_marginLeft="60dp"
                    android:backgroundTint="#30302e"
                    android:textAlignment="center"
                    android:textColor="@color/white"

                    android:textSize="18dp" />

            </RelativeLayout>

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="fitStart"


                android:src="@drawable/atm" />



        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cd41"
            android:layout_width="match_parent"
            android:layout_height="119dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:onClick="on_sbs"
            android:padding="@dimen/cardview_default_elevation"
            app:cardBackgroundColor="#30302e"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="BUS STOP"
                    android:contentDescription="Search Bus Stop "
                    android:id="@+id/button_sbs"
                    android:onClick="on_sbs"
                    android:layout_marginLeft="60dp"
                    android:backgroundTint="#30302e"
                    android:textAlignment="center"
                    android:textColor="@color/white"

                    android:textSize="18dp" />

            </RelativeLayout>

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="fitStart"


                android:src="@drawable/bus" />



        </androidx.cardview.widget.CardView>





        <androidx.cardview.widget.CardView
            android:id="@+id/cd42"
            android:layout_width="match_parent"
            android:layout_height="119dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:onClick="on_sm"
            android:padding="@dimen/cardview_default_elevation"
            app:cardBackgroundColor="#30302e"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="FOOD"
                    android:contentDescription="Search FOOD "
                    android:id="@+id/button_sm"
                    android:onClick="on_sm"
                    android:layout_marginLeft="60dp"
                    android:backgroundTint="#30302e"
                    android:textAlignment="center"
                    android:textColor="@color/white"

                    android:textSize="18dp" />

            </RelativeLayout>

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="fitStart"


                android:src="@drawable/food" />



        </androidx.cardview.widget.CardView>





        <androidx.cardview.widget.CardView
            android:id="@+id/cd43"
            android:layout_width="match_parent"
            android:layout_height="119dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:onClick="on_cs"
            android:padding="@dimen/cardview_default_elevation"
            app:cardBackgroundColor="#30302e"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="Custom Search "
                    android:onClick="on_cs"
                    android:text="CUSTOM SEARCH"
                    android:id="@+id/button8"

                    android:layout_marginLeft="60dp"
                    android:backgroundTint="#30302e"
                    android:textAlignment="center"
                    android:textColor="@color/white"

                    android:textSize="18dp" />

            </RelativeLayout>

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="fitStart"


                android:src="@drawable/search" />



        </androidx.cardview.widget.CardView>






    </LinearLayout>
</RelativeLayout>

